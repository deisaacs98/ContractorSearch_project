@model ContractorSearch.Models.Appointment

@{
    ViewData["Title"] = "CreateAppointments";
}

<h5>Create Appointments</h5>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAppointments">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApptDate" class="control-label">Appointment Date</label>
                <input asp-for="ApptDate" class="form-control" />
                <span asp-validation-for="ApptDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <div class="card-body">
            <p class="card-text">
                To begin, you must add the dates and times you are free to work.
                Doing this allows you to create your own schedule and to more
                efficiently coordinate with customers.
            </p>
            <p class="card-text">
                When a customer sends you a request, you will be able to contact
                them to discuss the specific details of the job.
            </p>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
