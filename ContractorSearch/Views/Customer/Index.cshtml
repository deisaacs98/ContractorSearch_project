@model ContractorSearch.Models.Customer

@{
    ViewData["Title"] = "Details";

}
<div class="row">
    <div class="col-md-4">
        <div class="card-body">
            <h5 class="card-title">What would you like to do?</h5>
            <p>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit Profile</a> 
            </p>
            <p>
                <a asp-action="CurrentAppointments">View Current Appointments</a> 
            </p>
            <p>
                <a asp-action="AvailableContractorsIndex" asp-route-id="@Model.Id">View Available Contractors</a>
            </p>                  
        </div>
    </div>
    <div class="col-md-8">
        <div class="card-body">
            <h5 class="card-title">Hello @Model.FirstName!</h5>
            <p class="card-text">
                You will now be able to use this application to find contractors in your area.
            </p>
            <p class="card-text">
                After selecting a contractor, you can view their available appointments and read reviews from other
                customers. If you like what you see and there is an available appointment that fits your schedule,
                you can request an appointment with the contractor.
            </p>
            <p class="card-text">
                Upon reviewing the request, the contractor will contact you to discuss the specific details of the appointment.
            </p>
        </div>
    </div>
</div>

<div>
    <h5>Customer Details</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Middle Initial
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MiddleInitial)
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Address Line 1
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddressLine1)
        </dd>
        <dt class="col-sm-2">
            Address Line 2
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddressLine2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            Zip Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Balance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Balance)
        </dd>
    </dl>
</div>
