@model ContractorSearch.Models.Appointment

@{
    ViewData["Title"] = "RateAndReview";
}

<h1>RateAndReview</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RateAndReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="PaymentMethod" />
            <input type="hidden" asp-for="Amount" />
            <input type="hidden" asp-for="ReservedAppointment" />
            <input type="hidden" asp-for="ContractorId" />
            <input type="hidden" asp-for="CustomerId" />
            <div class="form-group">
                <label asp-for="ApptDate" class="control-label"></label>
                <input asp-for="ApptDate" class="form-control" />
                <span asp-validation-for="ApptDate" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review" class="control-label"></label>
                <input asp-for="Review" class="form-control" />
                <span asp-validation-for="Review" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
